{
    "config_version": "2.0",
    "preset": "beginner",
    
    "_comment": "Beginner-friendly CPU mining configuration for PRIME channel",
    "_description": "Safe defaults for new miners - limited threads, below normal priority",
    
    "wallet_ip": "primepool.nexus.io",
    "port": 50000,
    "mining_mode": "PRIME",
    
    "pool": {
        "address": "<INSERT_YOUR_NXS_ADDRESS>",
        "display_name": "<YOUR_DISPLAY_NAME>"
    },
    
    "power_profile": "efficiency",
    "power_limit_percent": 80,
    "target_hashrate": 0,
    
    "console_logging": true,
    "file_logging": false,
    "log_file": "miner.log",
    "log_level": 2,
    "stats_interval": 30,
    
    "workers": [
        {
            "id": "cpu0",
            "hardware": "cpu",
            "cpu": {
                "threads": 0,
                "affinity_mask": 0,
                "priority": 1,
                "power_limit_percent": 80,
                "hyperthreading": false,
                "efficiency_cores": false,
                "target_hashrate": 0
            }
        }
    ],
    
    "enable_block_signing": false
}
